#!/usr/bin/env node

'use strict';

const args = require('../lib/argumentor')(process.argv);

if (args._.length < 2 || args.help) {
  console.log(`Usage: aerofly-checkwx <APIKEY> <ICAO> [FILE]

Copy raw METAR information from https://api.checkwx.com into Aerofly FS2 configuration file.
You will need an API key to fetch information.

Options:
      --hours=<X>            Offset time by X hours, e.g. '-8'
      --time=<X>             Set time to HH:MM+ZZ:ZZ, e.g. '12:30-08:00'
      --date=<X>             Set date to YYYY-MM-DD, e.g. '2018-12-31'
      --help                 Display this help and exit
      --verbose              Show debug output`);
  process.exit(0);
}

require('../lib/main')(args['verbose'])
  .fromCheckwx(
    args._[0],
    args._[1],
    args._[2]  || 'main.mcf',
    args.hours || 0,
    args.time  || null,
    args.date  || null
  )
;
