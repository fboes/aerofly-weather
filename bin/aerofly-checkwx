#!/usr/bin/env node

'use strict';

const args = require('../lib/argumentor')(process.argv);

if (args._.length < 2 || args.help) {
  console.log('Usage: aerofly-checkwx <APIKEY> <ICAO> [FILE]');
  console.log('');
  console.log('Copy raw METAR information from https://api.checkwx.com into Aerofly FS2 configuration file.');
  console.log('You will need an API key to fetch information.');
  console.log('');
  console.log('Options:');
  console.log('      --hours=<X>            Offset time by X hours');
  console.log('      --help                 Display this help and exit');
  console.log('      --verbose              Show debug output');
  process.exit(0);
}

require('../lib/main')(args['verbose'])
  .fromCheckwx(
    args._[0],
    args._[1],
    args._[2]  || 'main.mcf',
    args.hours || 0
  )
;
