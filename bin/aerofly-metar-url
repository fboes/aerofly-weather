#!/usr/bin/env node

'use strict';

const args = require('../lib/argumentor')(process.argv);

if (args._.length < 1 || args.help) {
  console.log(`Usage: aerofly-fetch <URL> [FILE]

Copy raw METAR information from URL into Aerofly FS2 configuration file.

Options:
      --hours=<X>            Offset time by X hours, e.g. '-8'
      --time=<X>             Set time to HH:MM+ZZ:ZZ, e.g. '12:30-08:00'
      --date=<X>             Set date to YYYY-MM-DD, e.g. '2018-12-31'
      --help                 Display this help and exit
      --verbose              Show debug output`);
  process.exit(0);
}

require('../lib/main')(args['verbose'])
  .fromUrl(
    args._[0],
    args._[1]  || 'main.mcf',
    args.hours || 0,
    args.time  || null,
    args.date  || null
  )
;
